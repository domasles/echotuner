# EchoTuner API v1.0 Configuration
# Copy this file to .env and configure your settings

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Ollama Configuration (for AI models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_VALIDATION_MODEL=nomic-embed-text:latest
OLLAMA_GENERATION_MODEL=phi3:mini
USE_OLLAMA=true
OLLAMA_TIMEOUT=30

# Spotify Configuration (for real-time song search)
# Get these from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Rate Limiting Settings
DAILY_LIMIT_ENABLED=false
MAX_PLAYLISTS_PER_DAY=3
MAX_REFINEMENTS_PER_PLAYLIST=3

# Cache Settings
CACHE_ENABLED=true

# Note: For production, set DAILY_LIMIT_ENABLED=true and configure appropriate limits
